{{#unless loggedIn}}
<div class="main info">
<h2>Welcome to a code snippet platform developed by ja222um </h2>
Start by registering an account by using the menu above.<br>
Or sign in if you already have an account.
</div>
{{/unless}}
{{#each snippets}}
<div class="main snippetPreview">
    <div class="header">
        <div class="name">
            <a href="/snippet/{{this.id}}">{{this.name}}</a>
        </div>
    </div>
    <pre>
        <code>
            {{this.snippet}}
        </code>
    </pre>
    <div class="meta">
        Hacked by <a href="/user/{{this.username}}">{{this.username}}</a> on {{formatDate this.createdAt "long"}}
    </div>
</div>
{{/each}}
